<!-- 顶部 -->
<view class="top">
  <view class="top-back"></view>
  <view class="top-front">
    <view class="row">
      <view class="userInfo">
        <image wx:if="{{isWxLogin}}" src="{{userInfo.avatarUrl}}"></image>
        <image wx:else src="/images/mine/head.png"></image>
        <view class="userKind" bindtap="toUserKindPage">{{userKind}}</view>
      </view>
      <view class="userInfo-right">
        <view wx:if="{{isWxLogin}}" class="nickName">{{userInfo.nickName}}</view>
        <button wx:else open-type="getUserInfo"  bindtap="wxLogin"  class="nickName" 	style="padding: 0; margin: 0;width: 200rpx;display: flex;background: white;">登录</button>
        <view wx:if="{{!intentionJob.job}}" class="expect" bindtap="toResumePage">点击完善简历</view>
        <view wx:else class="expect">期望职位 / {{intentionJob.job}}</view>
      </view>
    </view>
    <view class="top-front-data row">
      <view class="data-item">
        <view class="data-num">{{communicationNum}}</view>
        <view class="data-name">沟通</view>
      </view>
      <view class="data-item">
        <view class="data-num">{{interviewNum}}</view>
        <view class="data-name">面试</view>
      </view>
      <view class="data-item">
        <view class="data-num">{{deliveryNum}}</view>
        <view class="data-name">已投</view>
      </view>
      <view class="data-item">
        <view class="data-num">{{favoritesNum}}</view>
        <view class="data-name">收藏</view>
      </view>
    </view>
  </view>
</view>
<!-- 底部 -->
<view class="bottom">
  <view wx:for="{{myMsg}}" wx:key="index" data-index="{{index}}" class="bottom-item" bindtap="studentChangePage">
    <view class="row">
      <view class="row mineItem">
        <image src="{{item.imgUrl}}"></image>
        <view>{{item.name}}</view>
      </view>
      <image src="/images/mine/right.png" style="width: 37rpx; height: 37rpx;"></image>
    </view>
  </view>
</view>