page {
  margin-left: 5%;
  width: 90%;
  font-size: 10pt;
  color: #666;
}

.job-item {
  margin-top: 10rpx;
  padding-bottom: 20rpx;
  border-bottom: rgba(246, 181, 1, 0.15) solid 3rpx;
  justify-content: space-between;
}

.name {
  font-weight: 600;
  font-size: 11pt;
  line-height: 2.8em;
}

.salary {
  margin-left: 20rpx;
  letter-spacing: 5rpx;
  font-size: 10pt;
}

.operate view {
  font-size: 9pt;
  margin-left: 12rpx;
  border-radius: 10rpx;
  padding: 0 15rpx;
  letter-spacing: 2rpx;
  text-align: center;
}

.look {
  background-color: yellowgreen;
  color: white;
}

.edit {
  background-color: #F6B501;
  color: white;
}

.delete {
  background-color: tomato;
  color: white;
}

.add {
  position: fixed;
  bottom: 10%;
  right: 10%;
  z-index: 99;
}

.add image {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
}