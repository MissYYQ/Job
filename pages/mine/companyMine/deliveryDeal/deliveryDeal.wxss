page {
  font-size: 10pt;
  color: #666;
  background-color: #f3f3f3;
}


/* 顶部tab */
.tab {
  position: fixed;
  top: 0;
  width: 100%;
  justify-content: center;
  background-color: white;
}

.tab-item {
  flex: 1;
  font-size: 10pt;
  text-align: center;
  line-height: 80rpx;
  border-bottom: 6rpx solid #f3f3f3;
  letter-spacing: 3rpx;
}

.tab-item.active {
  color: #f6b501;
  border-bottom: #f6b501 6rpx solid;
  font-weight: 600;
}

/* 内容 */

.content {
  margin-top: 110rpx;
  margin-left: 3%;
  width: 94%;
}

.item {
  margin-top: 30rpx;
  padding-top: 20rpx;
  padding-bottom: 40rpx;
  background-color: white;
  border-radius: 30rpx;
}

.name {
  font-weight: 600;
  line-height: 2em;
}

.botton {
  margin-top: 20rpx;
}

.botton view {
  width: 200rpx;
  line-height: 2.2em;
  text-align: center;
  font-size: 9pt;
  padding: 0 30rpx;
  border-radius: 10rpx;
  margin-right: 30rpx;
  letter-spacing: 3rpx;
  font-weight: 600;
}

.passBtn {
  background-color: turquoise;
  color: white;
}

.failBtn {
  background-color: tomato;
  color: white;
}

.interview {
  background-color: #f6b501;
  color: white;
}

/* 更多 */
.checkbox {
  margin-left: 30rpx;
  margin-right: 30rpx;
}

/* 未选中样式 */
checkbox .wx-checkbox-input {
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  background: white;
  border: 1px solid #f6b501;
}

/* 选中后的样式 */
checkbox .wx-checkbox-input.wx-checkbox-input-checked {
  width: 45rpx;
  height: 45rpx;
  border: none;
  background: #f6b501;
}

/* 选中后的 对勾样式 （白色对勾 可根据UI需求自己修改） */
checkbox .wx-checkbox-input.wx-checkbox-input-checked::before {
  border-radius: 50%;
  /* 圆角 */
  width: 45rpx;
  /* 选中后对勾大小，不要超过背景的尺寸 */
  height: 45rpx;
  /* 选中后对勾大小，不要超过背景的尺寸 */
  line-height: 45rpx;
  text-align: center;
  font-size: 30rpx;
  /* 对勾大小*/
  font-weight: bold;
  /* 对勾加粗*/
  color: #fff;
  /* 对勾颜色 白色 */
  background: transparent;
  transform: translate(-50%, -50%) scale(1);
  -webkit-transform: translate(-50%, -50%) scale(1);
}

.bottom {
  position: fixed;
  bottom: 0;
  width: 100%;
  padding-top: 30rpx;
  padding-bottom: 30rpx;
  background-color: white;
  z-index: 99;
  justify-content: space-between;
}

.left {
  margin-left: 3%;
}

.moreBtn {
  margin-right: 3%;
}

.moreBtn view {
  width: 200rpx;
  line-height: 2.2em;
  text-align: center;
  font-size: 10pt;
  padding: 0 22rpx;
  border-radius: 10rpx;
  margin-left: 30rpx;
  letter-spacing: 3rpx;
  font-weight: 600;
}

/* 模板 */
.showTemplate {
  z-index: 999;
  margin-left: 5%;
}

.template-back {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: #888;
  opacity: 0.7;
}

.template {
  position: absolute;
  top: 13%;
  width: 80%;
  height: 56%;
  background-color: white;
  border-radius: 20rpx;
  padding: 5%;
}

.template-item {
  line-height: 2.2em;
}

.template-title {
  line-height: 2.5em;
}

.template-title view {
  margin-right: 20rpx;
}

input {
  font-weight: 600;
}

.button {
  justify-content: center;
  margin-top: 70rpx;
}

.button view {
  width: 45%;
  margin-left: 25rpx;
  margin-right: 25rpx;
  line-height: 2.2em;
  text-align: center;
  border-radius: 10rpx;
  letter-spacing: 3rpx;
}

.cancelBtn {
  background-color: #f3f3f3;
  color: #888;
}

.determineBtn {
  background-color: #f6b501;
  color: white;
}