page {
  margin-left: 5%;
  width: 90%;
  font-size: 10pt;
  color: #666;
}

.item {
  margin-top: 20rpx;
  padding-bottom: 40rpx;
  border-bottom: rgba(246, 181, 1, 0.15) solid 3rpx;
}

.name {
  font-weight: 600;
  line-height: 2em;
}

.botton {
  margin-top: 20rpx;
}

.botton view {
  width: 250rpx;
  line-height: 2.2em;
  text-align: center;
  font-size: 9pt;
  padding: 0 30rpx;
  border-radius: 10rpx;
  margin-right: 30rpx;
  letter-spacing: 3rpx;
  font-weight: 600;
}

.passBtn {
  background-color: turquoise;
  color: white;
}

.failBtn {
  background-color: tomato;
  color: white;
}

.interview {
  background-color: #f6b501;
  color: white;
}

/* 模板 */
.showTemplate {
  z-index: 999;
}

.template-back {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: #888;
  opacity: 0.7;
}

.template {
  position: absolute;
  top: 13%;
  width: 80%;
  height: 56%;
  background-color: white;
  border-radius: 20rpx;
  padding: 5%;
}

.template-item {
  line-height: 2.2em;
}

.template-title {
  line-height: 2.5em;
}

.template-title view{
  margin-right: 20rpx;
}

input{
  font-weight: 600;
}

.button{
  justify-content: center;
  margin-top: 70rpx;
}

.button view{
  width: 45%;
  margin-left: 25rpx;
  margin-right: 25rpx;
  line-height: 2.2em;
  text-align: center;
  border-radius: 10rpx;
  letter-spacing: 3rpx;
}

.cancelBtn{
  background-color: #f3f3f3;
  color: #888;
}

.determineBtn{
  background-color: #f6b501;
  color: white;
}