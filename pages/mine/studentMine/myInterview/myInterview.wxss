page {
  margin-left: 5%;
  width: 90%;
  font-size: 10pt;
  color: #333;
}

.interview-item {
  margin-top: 20rpx;
  padding-bottom: 30rpx;
  border-bottom: rgba(246, 181, 1, 0.25) solid 2rpx;
}

.name {
  font-size: 11pt;
  font-weight: 600;
  line-height: 2.2em;
}

.item{
  margin-top: 10rpx;
  align-items: flex-start;
}

.title{
  width: 25%;
}

.title-data{
  width: 75%;
}

.outdate{
  color: #ccc;
}

.bottom{
  justify-content: space-around;
  margin-top: 30rpx;
}

.bottom view{
  color: white;
  padding: 10rpx 100rpx;
  letter-spacing: 10rpx;
  font-weight: 600;
  border-radius: 8rpx;
  text-align: center;
}

.accept{
  background-color: yellowgreen;
}

.refuse{
  background-color: tomato;
}
