<!-- 职业技能 -->
<view class="item">
	<!-- 项名 -->
	<view class="row" bindtap="edit" data-mark="professionalSkills">
		<view class="title">职业技能</view>
		<image wx:if="{{isEdit}}" src="/images/mine/resume/edit02.png" class="edit-img"></image>
		<image wx:else src="/images/mine/resume/edit01.png" class="edit-img"></image>
	</view>
	<!-- 编辑职业技能 -->
	<view wx:if="{{mark === 'professionalSkills' && isEdit}}">
		<!-- 添加的技能显示 -->
		<view wx:if="{{professionalSkills}}">
			<view wx:for="{{professionalSkills}}" wx:key="index" data-index="{{index}}">
				<view class="row skill">
					<view class="item">{{item}}</view>
					<image src="/images/mine/resume/delete.png"></image>
				</view>
			</view>
		</view>
		<!-- 添加技能 -->
		<view class="row msg-item">
			<view class="item-name">添加技能</view>
			<input class="data" type="text" maxlength="8" value="{{addSkill}}" placeholder="技能限长8" data-key="professionalSkills" bindinput="editPS">{{addSkill}}</input>
			<view class="okImg">
				<image src="/images/mine/resume/seleted.png" bindtap="addSkill"></image>
			</view>
		</view>
		<!-- 按钮 -->
		<view class="row button">
			<view class="btn resetBtn" bindtap="resetBtn">重置</view>
			<view class="btn determineBtn" bindtap="editOverBtn">确定</view>
		</view>
	</view>
	<!-- 职业技能信息显示 -->
	<view wx:if="{{!isEdit}}">
		<view wx:if="{{professionalSkills}}">
			<view wx:for="{{professionalSkills}}" wx:key="index" data-index="{{index}}">
				<view class="row skill">
					<view>{{item}}</view>
				</view>
			</view>
		</view>
	</view>
</view>


