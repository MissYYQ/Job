/* 未登录 */
.not-login{
  width: 100%;
  text-align: center;
  font-size: 9pt;
  color: #999;
}

.not-login image{
  width: 80%;
  margin-top: 10%;
}

.btn {
  margin-left: 10%;
  width: 80%;
  line-height: 2.3em;
  border-radius: 90rpx;
  text-align: center;
  font-weight: 600;
  font-size: 12pt;
  letter-spacing: 3rpx;
}

.loginBtn {
  color: white;
  background-color: #F6B501;
  box-shadow: rgba(246, 181, 1, 0.8) 4rpx 7rpx;
}
/* 没消息 */
.noNews{
  width: 100%;
  text-align: center;
  font-size: 9pt;
  color: #999;
}
.noNews image{
  width: 77%;
  margin-top: 13%;
}

/* 有消息 */
.row{
  display: flex;
  flex-direction: row;
  align-items: center;
  box-sizing: border-box;
  margin: 50rpx 40rpx;
}
.row image{
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  margin-right: 35rpx;
}
.personName{
  font-size: 10pt;
  color: black;
}
.lastMsg{
  font-size: 9pt;
  color: #999;
  overflow: hidden;
}
.lastChatTime{
  font-size: 9pt;
  color: #999;
  position: absolute;
  right: 45rpx;
}