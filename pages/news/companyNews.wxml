<!-- 未登录 -->
<view wx:if="{{!isWxLogin}}">
  <include src="/pages/news/login.wxml"></include>
</view>

<!-- 已登录 -->
<view wx:else>
  <!-- 没消息 -->
  <view wx:if="{{!news}}" class="empty">
    <image src="/images/empty.png"></image>
  </view>
  <!-- 有消息 -->
  <view wx:else>
    <view wx:for="{{news}}" wx:key="index" bindtap="toChatPage" class="news-item">
      <view class="row ">
        <image src="{{item.student.avatar}}"></image>
        <view class="center-content">
          <view class="row">
            <view class="name">{{item.student.name}}</view>
            <!-- <view class="otherInfo">{{item.school}} · {{item.degree}}</view> -->
          </view>
          <view class="lastMsg">{{item.lastMsg}}</view>
        </view>
        <view class="lastChatTime">{{item.lastChatTime}}</view>
      </view>
    </view>
  </view>
</view>