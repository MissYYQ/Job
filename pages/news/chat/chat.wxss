page {
  background-color: #F5F5F6;
}

.msgItem {
  font-size: 10pt;
  letter-spacing: 3rpx;
  margin-top: 40rpx;
  align-items: flex-start;
}

.avatar image {
  width: 95rpx;
  height: 95rpx;
  border-radius: 50%;
  margin: 0 25rpx;
}

.sendBtn{
  font-size: 10pt;
  line-height: 2.1em;
  width: 120rpx;
  text-align: center;
  margin-left: -10rpx;
  margin-right: 20rpx;
  color: white;
  background-color: #f6b501;
  border-radius: 10%;
}

.leftMsg {
  justify-content: flex-start;
}

.rightMsg {
  justify-content: flex-end;
}

.itemMsgLeft {
  padding: 22rpx;
  background-color: white;
  color: black;
  width: fit-content;
  word-break: break-all;
  margin-right: 25%;
  border-radius: 0rpx 10rpx 10rpx 10rpx;
}

.itemMsgRight {
  padding: 22rpx;
  background-color: #f6b501;
  color: white;
  width: fit-content;
  word-break: break-all;
  margin-left: 25%;
  border-radius: 10rpx 0rpx 10rpx 10rpx;
}


/* 底部发送消息区域 */
.bottom {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
}

.bottomInput {
  background-color: white;
  height: 3em;
  justify-content: space-between;
}

input{
  margin-left: 5%;
  width: 75%;
}