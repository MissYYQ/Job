<!-- 未登录 -->
<view wx:if="{{!isWxLogin}}">
  <include src="/pages/news/login.wxml"></include>
</view>

<!-- 已登录 -->
<view wx:else>
  <!-- 没消息 -->
  <view wx:if="{{empty}}" class="empty">
    <image src="/images/empty.png"></image>
  </view>
  <!-- 有消息 -->
  <view wx:if="{{!empty}}">
    <view wx:for="{{news}}" wx:key="index" bindtap="toChatPage" class="news-item">
      <view class="row ">
        <image src="{{item.company.logourl}}"></image>
        <view>
          <view class="row">
            <view class="name">{{item.company.name}}</view>
            <!-- <view class="otherInfo">{{item.industry}}</view> -->
          </view>
          <view class="lastMsg">{{item.lastMsg}}</view>
        </view>
        <view class="lastChatTime">{{item.lastChatTime}}</view>
      </view>
    </view>
  </view>
</view>