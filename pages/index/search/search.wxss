page {
  width: 92%;
  height: 100%;
  margin-left: 4%;
  font-size: 10pt;
}

/* 顶部 */

.top {
  margin-top: 20rpx;
  padding-bottom: 10rpx;
}

.history,
.top,
.city {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
}

.top_city .city image {
  width: 50rpx;
  height: 50rpx;
}

.top_city  image {
  width: 60rpx;
  height: 60rpx;
}

input {
  font-size: 11pt;
  color: black;
  padding: 10rpx;
}

.placeholderClass {
  text-align: center;
  color: var(--weui-FG-1);
  font-size: 10pt;
  margin-left: -20rpx;
}

.top_search {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
  border: 1rpx solid #F6B501;
  border-radius: 50rpx;
  width: 450rpx;
  box-shadow: rgba(246, 181, 1, 0.9) 2rpx 4rpx;
}

.weui-icon-search {
  margin-left: 12rpx;
  width: 55rpx;
  height: 55rpx;
}

.weui-icon-clear {
  margin-right: 15rpx;
  width: 50rpx;
  height: 50rpx;
}

/* 内容 */

.key {
  margin: 5px;
  text-align: center;
  height: 2.3em;
  line-height: 2.3em;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: space-between;
  color: white;
  font-size: 9pt;
  letter-spacing: 3rpx;
}

.item_key{
  padding: 0 40rpx;
  border-radius: 50rpx;
}

.item_name{
  width: 100%;
  line-height: 3em;
  font-weight: 600;
  color: black;
  text-align: left;
  margin-left: 20rpx;
  margin-top: 10rpx;
  font-size: 11pt;
  letter-spacing: 5rpx;
}

.history_item{
  background-color:  rgb(225, 225, 225);
  color: black;
}