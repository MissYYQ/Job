page {
  font-size: 10pt;
}

/* 搜索 */
.placeholderClass {
  color: var(--weui-FG-1);
  font-size: 10pt;
}

.spaceBetween {
  justify-content: space-between;
}

input {
  width: 470rpx;
}

.top {
  position: fixed;
  top: 20rpx;
  padding-bottom: 10rpx;
  margin-left: 20rpx;
  width: 100%;
  background-color: white;
}

.top_search {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
  border: 1rpx solid #F6B501;
  border-radius: 50rpx;
  margin-left: 30rpx;
  width: 550rpx;
  box-shadow: rgba(246, 181, 1, 0.9) 2rpx 4rpx;
  height: 2.1em;
}

.top_search_btn {
  color: var(--weui-FG-1);
  margin-left: 40rpx;
}

.weui-icon-search {
  margin-left: 12rpx;
  margin-right: 12rpx;
  width: 58rpx;
  height: 58rpx;
}

.weui-icon-clear {
  margin-right: 15rpx;
  width: 50rpx;
  height: 50rpx;
}

/* 内容 */
.content {
  margin-top: 110rpx;
  margin-left: 4%;
  width: 95%;
}

.data {
  margin-left: 20rpx;
  margin-right: 20rpx;
}

.companyData {
  margin-top: 15rpx;
  padding-bottom: 30rpx;
  border-bottom: rgba(246, 181, 1, 0.15) solid 4rpx;
  width: 75%;
}

.companyImg image {
  width: 100rpx;
  height: 100rpx;
  margin-right: 40rpx;
}

.name {
  font-size: 11pt;
  font-weight: 600;
  letter-spacing: 3rpx;
  line-height: 1.8em;
}

.sizeAndFinancingStage {
  color: #555;
  font-size: 9pt;
}

.address {
  color: #555;
  font-size: 9pt;
}

.treatment {
  margin-top: 10rpx;
  flex-wrap: wrap;
}

.treatment-item {
  font-size: 8pt;
  background-color: #f3f3f3;
  color: #888;
  padding: 0 12rpx;
  border-radius: 10rpx;
  margin-right: 15rpx;
  margin-top: 12rpx;
}