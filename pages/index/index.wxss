@import "/pages/index/search/search.wxss";

page {
  width: 100%;
}

/* =========common=============== */
.content {
  width: 90%;
  margin: 0 15rpx;
  font-size: 9pt;
  color: #888;
  margin-top: 20rpx;
  letter-spacing: 2rpx;
  line-height: 70rpx;
  padding-bottom: 30rpx;
  border-bottom: rgba(246, 181, 1, 0.15) solid 3rpx;
}

.content-top {
  justify-content: space-between;
  line-height: 80rpx;
  padding-bottom: 10rpx;
}

.name {
  font-size: 12pt;
  color: black;
  font-weight: 600;
}


.salary {
  font-size: 12pt;
  color: #F6B501;
  letter-spacing: 10rpx;
}


.content-request view {
  background-color: #f3f3f3;
  color: #888;
  font-size: 9pt;
  padding: 0 16rpx;
  margin-right: 18rpx;
  border-radius: 10rpx;
  line-height: 50rpx;
  margin-right: 20rpx;
  margin-top: 16rpx;
}

.content-bottom {
  color: black;
  margin-top: 10rpx;
  justify-content: space-between;
}

.content-ecruiter image {
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
  display: block;
  padding-right: 15rpx;
}

.company {
  color: #888;
}

.placeholderClass {
  text-align: left;
  margin-left: 5rpx;
}


/* =========== studentIndex============= */

.studentIndex-search {
  background-color: #F6B501;
  font-size: 10pt;
  margin-left: -3%;
  width: 100%;
}

.search-body {
  margin-left: 6%;
  width: 88%;
  line-height: 2.5em;
  padding-bottom: 70rpx;
}

.search-box {
  background-color: white;
  border-radius: 12rpx;
}

.weui-icon-search {
  margin-left: 30rpx;
}

.search-placeholder {
  font-size: 10pt;
  margin-left: 20rpx;
  color: #888;
}

/* 板块 */
.studentPlate {
  justify-content: center;
  margin-left: -3%;
  width: 100%;
  background-color: white;
  border-radius: 35rpx;
  margin-top: -30rpx;
}

.plate-item {
  text-align: center;
  font-size: 8pt;
  color: #888;
  margin-top: 10rpx;
  padding: 15rpx 45rpx;
}

.plate-item image {
  width: 70rpx;
  height: 70rpx;
}

/* 推荐职位 */
.recommendJob {
  width: 94%;
  justify-content: space-between;
  line-height: 3.3em;
  border-bottom: 3rpx solid rgba(246, 181, 1, 0.15);
}

.recommendJob view {
  font-size: 12pt;
  font-weight: 600;
  margin-left: 20rpx;
}

.recommendJob image {
  width: 50rpx;
  height: 50rpx;
  margin-right: 28rpx;
}

/* ===== companyIndex================ */

.top {
  margin-left: 15rpx;
  width: 90%;
}

input {
  width: 460rpx;
  margin-left: 10rpx;
}

.top_search {
  width: 560rpx;
}

.top_search_btn {
  color: #888;
  margin-right: 10rpx;
}

.request-content {
  flex-wrap: wrap;
}