<!-- 顶部框框 -->
<view class="top-back"></view>
<view class="top-job">
	<view class="row">
		<view class="job-name">{{name}}</view>
		<view class="job-salary">{{salary}}</view>
	</view>
	<view class="row">
		<view class="job-information row">
			<image src="/images/jobDetails/location.png"></image>
			<view>{{city}}</view>
		</view>
		<view class="job-information row">
			<image src="/images/jobDetails/experience.png"></image>
			<view>{{experience}}</view>
		</view>
		<view class="job-information row">
			<image src="/images/jobDetails/education.png"></image>
			<view>{{education}}</view>
		</view>
	</view>
	<view class="company row" bindtap="toCompanyPage">
		<view class="company-info">
			<view class="companyName">{{companyName}}</view>
			<view>{{industry}} · {{size}} · {{financingStage}}</view>
			<view class="address">{{address}}</view>
		</view>
		<image src="/images/jobDetails/right.png"></image>
	</view>
</view>

<!-- 底部内容 -->
<view class="bottom-job">
	<!-- 公司待遇 -->
	<view class="skill">公司待遇</view>
	<view class="skills row">
		<view class="skill-item" wx:for="{{pay}}" wx:key="index" data-index="{{index}}">{{item}}</view>
	</view>
	<!-- 技能标签 -->
	<view class="skill">技能标签</view>
	<view class="skills row">
		<view class="skill-item" wx:for="{{skill}}" wx:key="index" data-index="{{index}}">{{item}}</view>
	</view>
	<!-- 岗位要求 -->
	<view class="skill">岗位要求</view>
	<view class="skills row">
		<view class="require-item" wx:for="{{require}}" wx:key="index" data-index="{{index}}">{{index+1}}、{{item}}</view>
	</view>
	<!-- 岗位职责 -->
	<view class="skill">岗位职责</view>
	<view class="skills row">
		<view class="require-item" wx:for="{{duty}}" wx:key="index" data-index="{{index}}">{{index+1}}、{{item}}</view>
	</view>
	<!-- 底部功能按钮 -->
	<view class="null"></view>
	<view class="bottom">
		<view class="row">
			<view class="favorites">
				<image wx:if="{{favorites}}" src="/images/jobDetails/favorites-fill.png" bindtap="favorites"></image>
				<image wx:else src="/images/jobDetails/favorites.png" bindtap="favorites"></image>
			</view>
			<view class="row btns">
				<view class="btn" bindtap="toChatPage">立即沟通</view>
				<view class="btn deliveryBtn">立即投递</view>
			</view>
		</view>
	</view>
</view>