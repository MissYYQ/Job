<!-- 顶部 -->
<view class="top">
  <view class="top_search">
    <i class="weui-icon-search"></i>
    <input type="text" focus value="{{inputVal}}" confirm-type="search" placeholder="请输入职位名称"
      placeholder-class="placeholderClass" bindinput="inputVal" />
    <span class="weui-icon-clear" wx:if="{{inputVal.length > 0}}" bindtap="clearInput"></span>
  </view>
  <view class="top_search_btn">搜索</view>
</view>
  <!-- 内容 -->
<view class="container">
  <view class="container-content" bindtap="toJobDetailsPage" wx:for="{{jobData}}" wx:key="index" data-index="{{index}}">
    <view class="row content-top">
      <view class="row">
        <text class="name">{{item.name}}</text>
      </view>
      <text class="salary">{{item.salary}}</text>
    </view>
    <view class="row content-request">
      <view>{{item.education}}</view>
      <view>{{item.experience}}</view>
      <view>{{item.city}}</view>
    </view>
    <view class="row content-bottom">
      <view class="row content-ecruiter">
        <image src="{{item.ecruiterImgUrl}}"></image>
        <view>{{item.ecruiterName}}</view>
      </view>
      <view class="company">{{item.companyName}} | {{item.companySize}} | {{item.financingStage}}</view>
    </view>
    <!-- 分隔线 -->
    <view class="divider"></view>
  </view>
</view>