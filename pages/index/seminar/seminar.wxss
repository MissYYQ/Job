/* 搜索 */
.top {
  position: fixed;
  top: 20rpx;
  padding-bottom: 10rpx;
  margin-left: 20rpx;
  width: 100%;
  background-color: white;
}

.top_search {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
  border: 1rpx solid #F6B501;
  border-radius: 50rpx;
  margin-left: 30rpx;
  width: 520rpx;
  box-shadow: rgba(246, 181, 1, 0.9) 2rpx 4rpx;
  height: 1.8em;
}

.top_search_btn{
  color: var(--weui-FG-1);
  margin-left: 40rpx;
}

.weui-icon-search {
  margin-left: 12rpx;
  margin-right: 12rpx;
  width: 58rpx;
  height: 58rpx;
}

.weui-icon-clear {
  margin-right: 15rpx;
  width: 50rpx;
  height: 50rpx;
}

