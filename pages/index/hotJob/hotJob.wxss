page {
  font-size: 10pt;
}

/* 搜索 */
.placeholderClass {
  color: var(--weui-FG-1);
  font-size: 10pt;
}

.spaceBetween {
  justify-content: space-between;
}

input {
  width: 470rpx;
}

.top {
  position: fixed;
  top: 20rpx;
  padding-bottom: 10rpx;
  margin-left: 20rpx;
  width: 100%;
  background-color: white;
}

.top_search {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
  border: 1rpx solid #F6B501;
  border-radius: 50rpx;
  margin-left: 30rpx;
  width: 550rpx;
  box-shadow: rgba(246, 181, 1, 0.9) 2rpx 4rpx;
  height: 2.1em;
}

.top_search_btn {
  color: var(--weui-FG-1);
  margin-left: 40rpx;
}

.weui-icon-search {
  margin-left: 12rpx;
  margin-right: 12rpx;
  width: 58rpx;
  height: 58rpx;
}

.weui-icon-clear {
  margin-right: 15rpx;
  width: 50rpx;
  height: 50rpx;
}

/* 内容 */
.content {
  margin-top: 120rpx;
  margin-left: 5%;
  width: 90%;
}

.content-item {
  margin-top: 10rpx;
  padding-bottom: 20rpx;
  border-bottom: rgba(246, 181, 1, 0.15) solid 3rpx;
}

.content-top {
  justify-content: space-between;
}

.name {
  letter-spacing: 3rpx;
  font-weight: 600;
  font-size: 12pt;
  line-height: 2.8em;
}

.salary {
  letter-spacing: 5rpx;
  font-size: 11pt;
  color: #F6B501;
}

.content-request {
  flex-wrap: wrap;
}

.content-request view {
  font-size: 9pt;
  background-color: #f3f3f3;
  color: #888;
  padding: 0 15rpx;
  border-radius: 8rpx;
  margin-right: 15rpx;
}

.content-bottom {
  justify-content: space-between;
  height: 2.8em;
}

.content-conpany image {
  width: 40rpx;
  height: 40rpx;
  margin-right: 13rpx;
}

.content-conpany view {
  color: #333;
  font-size: 9pt;
}

.company {
  font-size: 9pt;
  color: #888;
}